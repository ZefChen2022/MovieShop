
@using ApplicationCore.Contracts.Services
@inject IGenreService genreService

@{
    var genres = await genreService.GetAllGenres();
}

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Genres</a>
    <ul class="dropdown-menu">
        @foreach (var genre in genres)
        {
            <li><a class="dropdown-item" asp-controller="Movies" asp-action="GenreMovies" asp-route-id="@genre.Id">@genre.Name</a></li>
        }
    </ul>
</li>